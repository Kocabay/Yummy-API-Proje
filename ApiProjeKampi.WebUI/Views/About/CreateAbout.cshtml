@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkında Ekleme</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">

                            <label>Başlık</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br>
                            <label>Rezervasyon No</label>
                            <input type="text" asp-for="ReservationNumber" class="form-control" />
                            <br>
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br>
                            <label>Video Kapak Görseli</label>
                            <input type="text" asp-for="VideoCoverImageUrl" class="form-control" />
                            <br>
                            <label>Video Link (Embed Olarak )</label>
                            <input type="text" asp-for="VideoUrl" class="form-control" />
                            <br>
                            <label>Açıklama</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br>
                            <button class="btn btn-primary">Hakkında Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
