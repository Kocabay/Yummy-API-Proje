@model GetYummyEventByIdDto

@{
    ViewData["Title"] = "UpdateYummyEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Yeni Organizasyon Guncelleme</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="YummyEventId"/>
                            <label>Organizasyon  Baslığı</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br>
                            <label>Organizasyon  Aciklamasi</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br>
                            <label>Organizasyon  Fiyati</label>
                            <input type="text" asp-for="Price" class="form-control" />
                            <br>
                            <label>Görsel Url</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br>
                            <button class="btn btn-success">Organizasyon Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
